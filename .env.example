# Application
APP_NAME=Fundamental Analysis Microservice
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Database (OPTIONAL - Leave empty to run without database)
# If not set, service will run in NO-DB mode with in-memory storage
DATABASE_URL=postgresql+asyncpg://admin:password@localhost:5432/fundamental_db
DATABASE_ENABLED=true
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
USE_IN_MEMORY_STORAGE=false

# Redis (OPTIONAL - Leave empty to run without Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_ENABLED=true

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=fundamental_analysis

# External APIs (Optional)
MARKET_DATA_API_URL=https://api.example.com
MARKET_DATA_API_KEY=your-api-key

# External Gravity Microservices (OPTIONAL - for automatic data fetching)
# Leave empty if not using these services - the system will use fallback/default values
MARKET_DATA_SERVICE_URL=http://localhost:8010/api/v1
COMPANY_INFO_SERVICE_URL=http://localhost:8020/api/v1
INDUSTRY_BENCHMARKS_SERVICE_URL=http://localhost:8030/api/v1
ECONOMIC_INDICATORS_SERVICE_URL=http://localhost:8040/api/v1
NEWS_SENTIMENT_SERVICE_URL=http://localhost:8050/api/v1

# Data Collection Microservice
DATA_COLLECTION_SERVICE_URL=http://localhost:8001
DATA_COLLECTION_API_KEY=your-data-collection-api-key
DATA_COLLECTION_TIMEOUT=30.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Multi-Tenancy
ENABLE_MULTI_TENANCY=true
